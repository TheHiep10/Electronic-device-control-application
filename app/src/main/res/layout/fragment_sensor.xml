<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_home.fragmentSensor">

    <com.example.afinal.custom_textView.RobotoBoldTextView
        android:id="@+id/tvSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Sensor"
        android:textColor="@color/black"
        android:textSize="35dp"/>
    <LinearLayout
        android:layout_below="@+id/tvSensor"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/imgCo"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_toEndOf="@+id/imgCo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.example.afinal.custom_textView.RobotoBoldTextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:text="Air Quality"
                    android:textColor="@color/black"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>